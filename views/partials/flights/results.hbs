

<ul class="block-flights-results">
    {{#each this}}
    <li class="block-flights-results-list-item">
        {{#with parting}}
        <div class="row mb-3">
            <span class="col-10">
                <ul class="block-flights-results-list-item-flights">
                    {{#each segments}}
                    <li class="row justify-content-start flex-nowrap block-flights-results-list-item-flights-flight">
                        <span class="col-3">
                            Flight <span>{{flight}}</span>
                        </span>

                        <span class="col-3">
                            <span>{{fromCode}}</span>
                            <span>{{departTime}}</span>
                        </span>
                        <span class="col-3">
                            <span>{{toCode}}</span>
                            <span>{{arrivalTime}}</span>
                        </span>
                        <span class="col-3">
                            {{#each seats}}
                                {{this}}{{#unless @last}} | {{/unless}}
                            {{/each}}
                        </span>
                    </li>
                    {{/each}}
                </ul>
                <span class="row">
                    <span class="col-12">
                        <span>{{duration}}</span> | <a href="#">{{stops}} stop/s</a>
                    </span>
                </span>
            </span>
            <span class="col-2 text-center text-md-right">
                <div class="block-flights-results-list-item-price">
                    <span>${{../total}}</span>
                </div>
                <div class="block-flights-results-list-item-passengers">
                    <span>{{../passengers}} passenger/s</span>
                </div>
            </span>
        </div>
        {{/with}}
        {{#with returning}}
        <div class="row">
            <span class="col-10">
                <ul class="block-flights-results-list-item-flights">
                    {{#each segments}}
                    <li class="row justify-content-start flex-nowrap block-flights-results-list-item-flights-flight">
                        <span class="col-3">
                            Flight <span>{{flight}}</span>
                        </span>

                        <span class="col-3">
                            <span>{{fromCode}}</span>
                            <span>{{departTime}}</span>
                        </span>
                        <span class="col-3">
                            <span>{{toCode}}</span>
                            <span>{{arrivalTime}}</span>
                        </span>
                        <span class="col-3">
                            {{#each seats}}
                                {{this}}{{#unless @last}} | {{/unless}}
                            {{/each}}
                        </span>
                    </li>
                    {{/each}}
                </ul>
                <span class="row">
                    <span class="col-12">
                        <span>{{duration}}</span> | <a href="#">{{stops}} stop/s</a>
                    </span>
                </span>
            </span>
        </div>
        {{/with}}
    </li>
    {{/each}}
</ul>